  "radar_skills": {
    "Finishing": {
      "features": ["scene_change_count", "scene_change_rate"],
      "condition": "scene_change_count >= 2",
      "base": 34.0,
      "transformations": {
        "activity_score": "min(1.0, scene_change_rate / 0.25)",
        "scene_bonus": "min(scene_change_count, 10.0) * 2.0",
        "score": "round(clamp(base + activity_score * 45.0 + scene_bonus, 0, 100))"
      },
      "aggregation": "global video-level (no rolling windows)",
      "normalization": "clamp 0-100 after formula",
      "weights": "role-weighted later in compute_scores",
      "missing_handling": "None if condition fails; omitted from radar"
    },
